<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFCA8F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mail_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="22sp"
            android:text="@string/caption_cardview"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="0.5dp"/>

        <TextView
            android:id="@+id/abbreviated_message"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/email_string"/>

        <TextView
            android:id="@+id/mail_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_company"
            android:textColor="@color/colorPrimaryDark"/>

    </LinearLayout>

</android.support.v7.widget.CardView>