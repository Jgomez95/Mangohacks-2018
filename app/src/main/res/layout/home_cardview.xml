<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:layout_marginBottom="0.8dp">

    <LinearLayout
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/caption_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/caption_cardview"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/company_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_company"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="5dp"/>

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0.4dp"
            android:paddingBottom="10dp">


            <ImageButton
                android:id="@+id/view_profile_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_person_black_24dp"
                android:tint="@android:color/holo_purple"/>

            <ImageButton
                android:id="@+id/like_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_thumb_up_black_24dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:tint="@android:color/holo_blue_bright" />

            <ImageButton
                android:id="@+id/comment_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_comment_black_24dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:tint="@android:color/holo_green_light"/>

            <ImageButton
                android:id="@+id/share_post_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_screen_share_black_24dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:tint="@android:color/holo_blue_dark"/>



        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>